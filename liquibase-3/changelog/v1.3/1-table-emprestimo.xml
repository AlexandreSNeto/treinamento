<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20171203-1540" author="Neto">
        <createTable tableName="emprestimo">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="id_livro" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="id_leitor" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="data_retirada" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="data_entrega_prevista" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="data_entrega_realizada" type="datetime" />
        </createTable>
    </changeSet>

    <changeSet id="20171203-1541" author="Neto">
        <addForeignKeyConstraint baseColumnNames="id_leitor"
                baseTableName="emprestimo"
                constraintName="fk_emprestimo_leitor"
                deferrable="true"
                initiallyDeferred="true"
                referencedColumnNames="id"
                referencedTableName="leitor"/>
    </changeSet>

    <changeSet id="20171203-1542" author="Neto">
        <addForeignKeyConstraint baseColumnNames="id_livro"
                baseTableName="emprestimo"
                constraintName="fk_emprestimo_livro"
                deferrable="true"
                initiallyDeferred="true"
                referencedColumnNames="id"
                referencedTableName="livro"/>
    </changeSet>

</databaseChangeLog>